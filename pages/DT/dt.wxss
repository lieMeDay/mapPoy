/* 弹框 */
.alertWrap {
  width: 100%;
  height: 0;
  position: absolute;
  bottom: 0;
  background-color: #000;
  z-index: 100;
  overflow: auto;
}

.alertBox {
  width: calc(100% - 60rpx);
  margin: 30rpx auto;
  /* background-color: pink; */
  background-color: #2f2f2f;
  border-radius: 25rpx;
  overflow: hidden;
  color:#fff;
}
.closeBox{
  overflow: hidden;
}
.closeImg {
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.alertCon{
  width: 100%;
  padding-bottom: 20rpx;
}
.alertTit,.showCon{
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  line-height: 80rpx;
}
.alertTit>view,
.showCon>view{
  flex: 1;
}
.alertTit{
  background-color: #444444;
}
.showCon{
  line-height: 100rpx;
  border-bottom: 1px solid #444444;
  background-color: #2f2f2f;
}
.showCon:last-child{
  border-bottom: none;
}